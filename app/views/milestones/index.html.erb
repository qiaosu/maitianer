<% @title = "里程碑" %>
<% @body_id = "list-milestones" %>

<div id="container">
	<div id="left-content">
		<%= render "babies/quick_panel"%>
		<div class="content-inner clearfix round">
			<div class="content-header">
				<h2>所有里程碑</h2>
				<div class="search-holder">
					<form action="" method="post">
						<input type="text" />
						<input type="submit" class="btn" value="搜索里程碑" />
					</form>
				</div>
			</div>
			<table>
				<thead class="green">
					<tr>
						<th>日期</th>
						<th>里程碑内容</th>
						<th>操作</th>
					</tr>
				</thead>
				<tbody>
					<% @milestones.each do |milestone| %>
					<tr>
						<td><%= milestone.created_at %></td>
						<td><%= milestone.milestone_content%></td>
						<td>
							<%= link_to "删除", baby_milestone_path(@baby, milestone), :confirm => "是否确认删除", :method => :delete %> | 
							<%= link_to "编辑", edit_baby_milestone_path(@baby, milestone)%>
							
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
	<%= render :partial => "babies/right_column" %>
</div>